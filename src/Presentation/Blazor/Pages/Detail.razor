@layout HomeLayout
@page "/detail"

<div class="my-20">
    <RadzenImage style="height:350px; object-fit: cover;" class="img-fluid w-100" Path="Images/banner.jpg">
    </RadzenImage>
</div>
<div class="container my-5">
    <div class="row">
        <div class="col-8 text-black">

            <div class="tags">
                <RadzenButton style="text-transform: capitalize;" ButtonStyle="ButtonStyle.Light">Rpg</RadzenButton>
                <RadzenButton style="text-transform: capitalize;" ButtonStyle="ButtonStyle.Light">Fps</RadzenButton>
                <RadzenButton style="text-transform: capitalize;" ButtonStyle="ButtonStyle.Light">MMO</RadzenButton>
                <RadzenButton style="text-transform: capitalize;" ButtonStyle="ButtonStyle.Light">Clash</RadzenButton>
                <RadzenButton style="text-transform: capitalize;" ButtonStyle="ButtonStyle.Light">Of</RadzenButton>
                <RadzenButton style="text-transform: capitalize;" ButtonStyle="ButtonStyle.Light">Clans</RadzenButton>
                <RadzenButton style="text-transform: capitalize;" ButtonStyle="ButtonStyle.Light">Sava≈ü</RadzenButton>
            </div>
            <hr style="color:#aaaaaa">
            <div class="author">
                <div class="row">
                    <RadzenCard class="p-3 bg-transparent">
                        <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" Gap="0">
                            <div>
                                <RadzenImage style="width:90px;margin:0 !important;" class="rounded-circle"
                                    Path="Images/user2.jpg">
                                </RadzenImage>
                            </div>
                            <RadzenStack Orientation="Orientation.Vertical">
                                <div class="mx-3">
                                    <RadzenText style="margin:0 !important;text-transform: uppercase;" Text="Written By"
                                        TextStyle="TextStyle.Caption">
                                    </RadzenText>
                                    <RadzenText style="margin:0 !important;" TextStyle="TextStyle.Subtitle2">Birrell
                                        Chariot
                                    </RadzenText>
                                    <RadzenText style="margin:0 !important;">Lorem ipsum dolor sit amet consectetur
                                        adipisicing elit. Iste aperiam veritatis sit fuga, maxime nostrum vero eum.
                                        Aperiam
                                        nobis porro, debitis, quam, reprehenderit nemo libero laboriosam expedita a
                                        aliquam
                                        vel?</RadzenText>
                                </div>
                            </RadzenStack>
                        </RadzenStack>
                    </RadzenCard>
                </div>
            </div>
            <div class="my-3">
                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Responses (10)
                </RadzenText>
                <RadzenCard class="p-0 bg-transparent">
                    <RadzenTextArea Placeholder="Add to discussion" Rows="4" class="w-100" />
                    <RadzenButton class="b-rad" style="text-transform: capitalize;" ButtonStyle="ButtonStyle.Primary">
                        Submit
                    </RadzenButton>
                    <RadzenButton class="b-rad" style="text-transform: capitalize;" ButtonStyle="ButtonStyle.Dark">
                        Cancel
                    </RadzenButton>
                </RadzenCard>

            </div>
            @for (int i = 0; i < 5; i++)
            {
                <div id="comments" class="row my-35">
                    <div class="col-1 align-items-center">
                        <RadzenImage style="width: 40px;margin-top:50%" class="rounded-circle img-fluid"
                            Path="Images/user.jpg">
                        </RadzenImage>
                    </div>
                    <div class="col-11">
                        <RadzenCard class="bg-transparent" style="border:1px solid #d5d3d36a">
                            <RadzenText>Truelock Alric</RadzenText>
                            <RadzenText>Lorem ipsum, dolor sit amet consectetur adipisicing elit.</RadzenText>
                            <div class="my-2">
                                <RadzenButton class="b-rad" ButtonStyle="ButtonStyle.Light" Icon="favorite" Text="96">
                                </RadzenButton>
                                <RadzenButton style="text-transform: capitalize;" class="b-rad"
                                    ButtonStyle="ButtonStyle.Light" Icon="reply" Text="Reply">
                                </RadzenButton>
                            </div>

                        </RadzenCard>
                    </div>
                </div>
            }
            <div class="text-center mt-3">
                <RadzenButton class="b-rad p-3 w-100" style="text-transform: none;"
                    Text="View full comments (+117 comments)">
                </RadzenButton>
            </div>

        </div>
        <div class="col-12 col-lg-4">
            <RadzenCard style="background-color: #F3F4F6;" class="b-rad">
                <div class="d-flex justify-content-between">
                    <RadzenText class="d-inline-block" TextStyle="TextStyle.H6">More tags</RadzenText>
                    <RadzenLink style="text-decoration:none !important;color:#4338CA" Path="#" Text="View all">
                    </RadzenLink>
                </div>
                <hr style="color:#aaaaaa">
                <RadzenButton class="custom-btn m-1">Tag(12)</RadzenButton>
                <RadzenButton class="custom-btn m-1">Tag(14)</RadzenButton>
                <RadzenButton class="custom-btn m-1">Tag(15)</RadzenButton>
                <RadzenButton class="custom-btn m-1">Tag(123)</RadzenButton>
                <RadzenButton class="custom-btn m-1">Tag(13)</RadzenButton>
                <RadzenButton class="custom-btn m-1">Tag(16)</RadzenButton>
                <RadzenButton class="custom-btn m-1">Tag(18)</RadzenButton>
            </RadzenCard>
            <RadzenCard style="background-color: #F3F4F6;" class="my-4 b-rad">
                <div class="d-flex justify-content-between">
                    <RadzenText class="d-inline-block" TextStyle="TextStyle.H6">Discover Authors</RadzenText>
                    <RadzenLink style="text-decoration:none !important;color:#4338CA" Path="#" Text="View all">
                    </RadzenLink>
                </div>
                <hr style="color:#aaaaaa">
                @for (int i = 0; i < 4; i++)
                {
                    <RadzenCard style="cursor: pointer;" class="bg-transparent">
                        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Start"
                            Gap="0.5rem">
                            <RadzenImage Path="Images/user.jpg" Style="width: 50px; height: 50px; border-radius: 50%;" />
                            <RadzenStack Gap="0">
                                <RadzenText TextStyle="TextStyle.Overline" class="rz-display-flex  rz-my-0">
                                    <b>Jaw ard</b>
                                </RadzenText>
                                <RadzenText TextStyle="TextStyle.Body1">Author job</RadzenText>

                            </RadzenStack>
                        </RadzenStack>
                    </RadzenCard>
                    <hr style="color:#aaaaaa">
                }
            </RadzenCard>
            <RadzenCard style="background-color: #F3F4F6;" class="b-rad my-4">
                <div class="d-flex justify-content-between">
                    <RadzenText class="d-inline-block" TextStyle="TextStyle.H6">More tags</RadzenText>
                    <RadzenLink style="text-decoration:none !important;color:#4338CA" Path="#" Text="View all">
                    </RadzenLink>
                </div>
                <hr style="color:#aaaaaa">
                @for (int i = 0; i < 4; i++)
                {
                    <RadzenCard class="bg-transparent" style="height:130px;">
                        <div style="position: relative;">
                            <RadzenImage Path="Images/user.jpg" Style="width: 40px; height: 40px; border-radius: 50%;" />

                            <RadzenText class="d-inline-block" TextStyle="TextStyle.Body1">Jaw Ard</RadzenText>
                            <RadzenText class="d-block">asdjklasjdasdjklasdjklhasdjkl</RadzenText>
                            <div id="populer-post-img" style="position:absolute;right:0;top:0;">
                                <RadzenImage class="b-rad" Path="Images/smallSquare2.jpg"></RadzenImage>
                            </div>
                        </div>
                    </RadzenCard>
                    <hr style="color:#aaaaaa">
                }
            </RadzenCard>

        </div>
    </div>
</div>