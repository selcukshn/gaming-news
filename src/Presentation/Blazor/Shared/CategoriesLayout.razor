@inherits LayoutComponentBase
<style>
    <link href="{YOUR APP ASSEMBLY NAME}.styles.css" rel="stylesheet">* {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
        text-decoration: none;
        border: none;
        outline: none;
        box-shadow: none !important;
        scroll-behavior: smooth;
    }

    .text-color {
        color: #ededed;
        font-family: 'Poppins', sans-serif;
    }

    .second-background-color {
        background-color: #112e42;
    }

    .main-color {
        color: #00abf0;
    }

    .header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 1rem 9%;
        background-color: #FFFFFF;
        align-items: center !important;
        z-index: 100 !important;
    }

    body {
        background-color: #F8F8F8;
        color: #ededed;
    }

    .logo {
        font-size: 1.5rem;
        font-weight: 600;
    }

    #navbar_icon {
        color: #47494d !important;
    }

    .c_navbar i {
        color: #B2B7BF !important;
        cursor: pointer;
    }

    #populer_post {
        position: relative;
    }

    .populer-img {
        position: relative;
    }

    #img-items {
        text-align: start;
        display: flex;
        width: 100%;
        position: relative;
    }

    #img-item {
        position: absolute;
        display: block;
        width: 600px;
        top: 20%;
        left: calc(50% - 300px);
    }

    .text-color {
        color: #ededed;
        font-weight: 900;
        font-size: 26px;

    }

    .card-text {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        font-weight: 800;
        font-size: 16px;

    }

    .b-rad {
        border-radius: 30px;
    }

    .card-shadow {
        border: 1px solid #BFBFBF !important;
        box-shadow: 10px 10px 20px #aaaaaa !important;
    }

    .text-title-style {
        color: black;
        letter-spacing: 2px;
        font-weight: 700;
        font-size: 24px;
    }


    .text-title-style-2 {
        color: black;
        letter-spacing: 1.5px;
        font-weight: 800;
        font-size: 26px;
    }

    .my-50 {
        margin-top: 100px;

    }

    .my-40 {
        margin-top: 80px;

    }

    .my-20 {
        margin-top: 40px;
    }

    .custom-btn {
        background-color: #FFF !important;
        color: #aaaaaa !important;
        text-transform: none !important;
        outline-color: transparent;


    }

    .radius-tl-tr {
        border-top-left-radius: 30px;
        border-top-right-radius: 30px;
    }

    .customize-icon {
        font-size: 16px;
        color: #47494d;
        font-weight: 700;
    }

    .mr-l {
        margin-left: auto !important;
    }

    .rz-dropdown-trigger-icon {
        font-size: 0 !important;
    }
</style>
<RadzenLayout style="height:100vh">
    <HeaderComponent></HeaderComponent>
    <RadzenBody style="padding: 0 ">
        <div>
            @Body
        </div>
        <FooterComponent></FooterComponent>
    </RadzenBody>
</RadzenLayout>
@code {
    string value;
}